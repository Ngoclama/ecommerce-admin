generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ─── 1. USER & AUTH (Đồng bộ với Clerk) ────────────────────────
model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  clerkId  String  @unique
  email    String  @unique
  name     String?
  imageUrl String?
  role     String  @default("CUSTOMER") // "ADMIN" | "VENDOR" | "CUSTOMER"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Quan hệ
  stores    Store[]
  orders    Order[]
  reviews   Review[]
  addresses Address[]
  wishlist  Wishlist[]
}

// ─── 2. STORE MANAGEMENT ──────────────────────────────────────
model Store {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  userId String // Đây là Clerk ID
  user   User   @relation(fields: [userId], references: [clerkId])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Quan hệ Catalog
  billboards Billboard[]
  categories Category[]
  sizes      Size[]
  colors     Color[]
  materials  Material[]
  products   Product[]

  // Quan hệ Business
  orders  Order[]
  coupons Coupon[]
}

// ─── 3. CATALOG & ATTRIBUTES ──────────────────────────────────
model Billboard {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  storeId    String     @db.ObjectId
  store      Store      @relation(fields: [storeId], references: [id])
  label      String
  imageUrl   String
  categories Category[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([storeId])
}

model Category {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  storeId     String    @db.ObjectId
  store       Store     @relation(fields: [storeId], references: [id])
  billboardId String    @db.ObjectId
  billboard   Billboard @relation(fields: [billboardId], references: [id])

  name String
  slug String? // Cho SEO 

  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([storeId])
  @@index([billboardId])
}

model Size {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  storeId   String    @db.ObjectId
  store     Store     @relation(fields: [storeId], references: [id])
  name      String
  value     String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([storeId])
}

model Color {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  storeId   String    @db.ObjectId
  store     Store     @relation(fields: [storeId], references: [id])
  name      String
  value     String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([storeId])
}

// MỚI: Model Chất liệu (Cotton, Silk, Denim...)
model Material {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  storeId   String    @db.ObjectId
  store     Store     @relation(fields: [storeId], references: [id])
  name      String
  value     String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([storeId])
}

// ─── 4. PRODUCT (SẢN PHẨM) ────────────────────────────────────
model Product {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  storeId String @db.ObjectId
  store   Store  @relation(fields: [storeId], references: [id])

  categoryId String   @db.ObjectId
  category   Category @relation(fields: [categoryId], references: [id])

  name        String
  description String?
  price       Float

  // Thuộc tính
  isFeatured Boolean @default(false)
  isArchived Boolean @default(false)
  inventory  Int     @default(10) // MỚI: Quản lý tồn kho

  // Phân loại chi tiết
  sizeId String @db.ObjectId
  size   Size   @relation(fields: [sizeId], references: [id])

  colorId String @db.ObjectId
  color   Color  @relation(fields: [colorId], references: [id])

  materialId String?   @db.ObjectId // MỚI: Optional
  material   Material? @relation(fields: [materialId], references: [id])

  gender String? @default("UNISEX") // "MEN", "WOMEN", "KIDS", "UNISEX"

  images     Image[]
  orderItems OrderItem[]
  reviews    Review[]
  wishlists  Wishlist[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([categoryId])
  @@index([sizeId])
  @@index([colorId])
  @@index([materialId])
}

model Image {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

// ─── 5. ORDER & CHECKOUT (QUAN TRỌNG) ─────────────────────────
model Order {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  storeId String @db.ObjectId
  store   Store  @relation(fields: [storeId], references: [id])

  // Thông tin khách hàng (nếu login)
  userId String? @db.ObjectId
  user   User?   @relation(fields: [userId], references: [id])

  orderItems OrderItem[]
  isPaid     Boolean     @default(false)

  // Thông tin giao hàng
  phone      String      @default("")
  address    String      @default("")
  status     OrderStatus @default(PENDING)
  // Thanh toán
  totalPrice Float       @default(0)
  currency   String      @default("VND")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
}

model OrderItem {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  orderId String @db.ObjectId
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])

  quantity Int @default(1)

  // SNAPSHOT FIELDS (Lưu cứng tên để hiển thị hóa đơn)
  productName  String?
  productPrice Float?
  sizeName     String?
  colorName    String?

  sizeId  String? @db.ObjectId
  colorId String? @db.ObjectId

  @@index([orderId])
  @@index([productId])
}

// ─── 6. MARKETING & ENGAGEMENT ────────────────────────────────
model Coupon {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  storeId   String   @db.ObjectId
  store     Store    @relation(fields: [storeId], references: [id])
  code      String
  value     Float // Giá trị giảm
  type      String // "PERCENT" hoặc "FIXED"
  createdAt DateTime @default(now())

  @@unique([storeId, code]) // Một store không trùng mã coupon
  @@index([storeId])
}

model Review {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  rating   Int // 1-5 sao
  content  String?
  imageUrl String? // Khách có thể up ảnh review

  createdAt DateTime @default(now())

  @@index([productId])
  @@index([userId])
}

model Wishlist {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, productId]) // Một user chỉ wishlist 1 sp một lần
  @@index([userId])
  @@index([productId])
}

// ─── 7. ADDRESS (Sổ địa chỉ khách hàng) ───────────────────────
model Address {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  label     String // "Nhà riêng", "Công ty"
  phone     String
  address   String
  city      String
  isDefault Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}
