generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
}

// ─── 1. USER & AUTH ───────────────────────────────────────────
model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  clerkId  String  @unique
  email    String  @unique
  name     String?
  imageUrl String?
  role     Role    @default(CUSTOMER)
  isVIP    Boolean @default(false)
  isBanned Boolean @default(false)
  phone    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stores        Store[]
  orders        Order[]
  reviews       Review[]
  addresses     Address[]
  wishlist      Wishlist[]
  returns       Return[]
  notifications Notification[]
}

// ─── 2. STORE MANAGEMENT ──────────────────────────────────────
model Store {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  userId         String
  address        String?
  phone          String?
  email          String?
  categories     Category[]
  products       Product[]
  orders         Order[]
  sizes          Size[]
  colors         Color[]
  materials      Material[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  user           User           @relation(fields: [userId], references: [id])
  billboards     Billboard[]
  coupons        Coupon[]
  shippings      Shipping[]
  flashSales     FlashSale[]
  blogPosts      BlogPost[]
  blogCategories BlogCategory[]

  @@index([userId])
}

// ─── 3. CATALOG & ATTRIBUTES ──────────────────────────────────
model Billboard {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  storeId    String     @db.ObjectId
  store      Store      @relation(fields: [storeId], references: [id])
  label      String
  imageUrl   String
  categories Category[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([storeId])
}

model Category {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  storeId     String     @db.ObjectId
  store       Store      @relation(fields: [storeId], references: [id])
  name        String
  slug        String
  imageUrl    String?
  products    Product[]
  blogPosts   BlogPost[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  billboard   Billboard? @relation(fields: [billboardId], references: [id])
  billboardId String?    @db.ObjectId

  parentId String?    @db.ObjectId
  parent   Category?  @relation("CategoryParent", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children Category[] @relation("CategoryParent")

  @@unique([storeId, slug])
  @@index([storeId])
  @@index([parentId])
}

model Size {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  storeId         String           @db.ObjectId
  store           Store            @relation(fields: [storeId], references: [id])
  name            String
  value           String
  productVariants ProductVariant[]
  cartItems       CartItem[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([storeId])
}

model Color {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  storeId         String           @db.ObjectId
  store           Store            @relation(fields: [storeId], references: [id])
  name            String
  value           String
  productVariants ProductVariant[]
  cartItems       CartItem[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([storeId])
}

model Material {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  storeId         String           @db.ObjectId
  store           Store            @relation(fields: [storeId], references: [id])
  name            String
  value           String
  products        Product[]
  productVariants ProductVariant[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  cartItems       CartItem[]

  @@index([storeId])
}

enum Role {
  ADMIN
  VENDOR
  CUSTOMER
}

// ─── 4. PRODUCT & VARIANTS ────────────────────────────────────
model Product {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  storeId    String   @db.ObjectId
  store      Store    @relation(fields: [storeId], references: [id])
  categoryId String   @db.ObjectId
  category   Category @relation(fields: [categoryId], references: [id])

  name        String
  slug        String
  description String?

  price          Int
  compareAtPrice Int?

  isFeatured  Boolean @default(false)
  isArchived  Boolean @default(false)
  isPublished Boolean @default(true)

  variants ProductVariant[]

  materialId String?   @db.ObjectId
  material   Material? @relation(fields: [materialId], references: [id])
  gender     String?   @default("UNISEX")

  metaTitle       String?
  metaDescription String?
  tags            String[]

  trackQuantity  Boolean @default(true)
  allowBackorder Boolean @default(false)

  images            Image[]
  orderItems        OrderItem[]
  cartItems         CartItem[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  publishedAt       DateTime?
  reviews           Review[]
  wishlists         Wishlist[]
  flashSaleProducts FlashSaleProduct[]

  @@unique([storeId, slug])
  @@index([storeId])
  @@index([categoryId])
}

model Image {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

model ProductVariant {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  sizeId String @db.ObjectId
  size   Size   @relation(fields: [sizeId], references: [id])

  colorId String @db.ObjectId
  color   Color  @relation(fields: [colorId], references: [id])

  materialId String?   @db.ObjectId
  material   Material? @relation(fields: [materialId], references: [id])

  sku String?

  inventory         Int @default(0)
  lowStockThreshold Int @default(10)

  price Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId, sizeId, colorId, materialId])
  @@index([productId])
  @@index([sizeId])
  @@index([colorId])
  @@index([materialId])
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  RETURNED
}

// ─── 5. ORDER & CHECKOUT ──────────────────────────────────────
model Order {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber   String      @unique @default(cuid())
  storeId       String      @db.ObjectId
  store         Store       @relation(fields: [storeId], references: [id])
  userId        String?     @db.ObjectId
  user          User?       @relation(fields: [userId], references: [id])
  orderItems    OrderItem[]
  isPaid        Boolean     @default(false)
  status        OrderStatus @default(PENDING)
  statusHistory Json?

  receiverName    String?
  receiverPhone   String?
  phone           String  @default("")
  email           String?
  address         String  @default("")
  shippingAddress String?
  city            String?
  postalCode      String?
  country         String?

  shippingMethod String?
  shippingCost   Float?  @default(0)
  trackingNumber String?

  paymentMethod String?
  paymentStatus String?
  transactionId String?

  subtotal   Float   @default(0)
  tax        Float   @default(0)
  discount   Float   @default(0)
  couponCode String?
  total      Float   @default(0)

  customerNote String?
  adminNote    String?

  // Inventory tracking flag
  inventoryDecremented Boolean @default(false)

  shippings Shipping[]
  returns   Return[]

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  notifications Notification[]

  @@index([storeId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String  @db.ObjectId
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])

  quantity Int     @default(1)
  price    Float?
  imageUrl String?

  sizeId       String? @db.ObjectId
  colorId      String? @db.ObjectId
  materialId   String? @db.ObjectId
  productName  String?
  productPrice Float?
  sizeName     String?
  colorName    String?
  materialName String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([productId])
}

model Coupon {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  storeId   String    @db.ObjectId
  store     Store     @relation(fields: [storeId], references: [id])
  code      String
  value     Float
  type      String
  createdAt DateTime  @default(now())
  expiresAt DateTime?

  @@unique([storeId, code])
  @@index([storeId])
}

// ─── 6. FLASH SALE ──────────────────────────────────────────────
model FlashSale {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  storeId     String  @db.ObjectId
  store       Store   @relation(fields: [storeId], references: [id])
  name        String
  description String?

  startDate DateTime
  endDate   DateTime

  discountType  String
  discountValue Float

  flashSaleProducts FlashSaleProduct[]

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([startDate])
  @@index([endDate])
  @@index([isActive])
}

model FlashSaleProduct {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  flashSaleId String    @db.ObjectId
  flashSale   FlashSale @relation(fields: [flashSaleId], references: [id], onDelete: Cascade)
  productId   String    @db.ObjectId
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([flashSaleId, productId])
  @@index([flashSaleId])
  @@index([productId])
}

// ─── 7. REVIEWS ──────────────────────────────────────────────────
model Review {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  productId     String    @db.ObjectId
  product       Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId        String    @db.ObjectId
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating        Int
  content       String?
  imageUrls     String[]
  videoUrls     String[]
  isArchived    Boolean   @default(false)
  adminResponse String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt

  @@index([productId])
  @@index([userId])
}

model Wishlist {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

model Address {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  label     String
  phone     String
  address   String
  city      String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// ─── 8. CART ──────────────────────────────────────────────────
model Cart {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  userId    String?    @unique
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  couponCode String?
}

model CartItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  cartId    String  @db.ObjectId
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  sizeId     String?   @db.ObjectId
  size       Size?     @relation(fields: [sizeId], references: [id])
  colorId    String?   @db.ObjectId
  color      Color?    @relation(fields: [colorId], references: [id])
  materialId String?   @db.ObjectId
  material   Material? @relation(fields: [materialId], references: [id])

  quantity Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([cartId])
  @@index([productId])
}

enum ReturnStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}

model Return {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  orderId String @db.ObjectId
  order   Order  @relation(fields: [orderId], references: [id])
  userId  String @db.ObjectId
  user    User   @relation(fields: [userId], references: [id])

  status      ReturnStatus @default(PENDING)
  reason      String
  description String?

  returnItems ReturnItem[]

  refundAmount Float   @default(0)
  refundMethod String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([userId])
}

model ReturnItem {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  returnId    String @db.ObjectId
  return      Return @relation(fields: [returnId], references: [id], onDelete: Cascade)
  orderItemId String @db.ObjectId

  quantity Int
  reason   String

  createdAt DateTime @default(now())

  @@index([returnId])
}

// ─── 9. SHIPPING ──────────────────────────────────────────────
enum ShippingProvider {
  GHN
  VIETTELPOST
  GHTK
  CUSTOM
}

enum ShippingStatus {
  PENDING
  CREATED
  PICKED_UP
  IN_TRANSIT
  DELIVERED
  RETURNED
  CANCELLED
}

model Shipping {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  orderId String @db.ObjectId
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  storeId String @db.ObjectId
  store   Store  @relation(fields: [storeId], references: [id])

  provider        ShippingProvider @default(CUSTOM)
  providerOrderId String?
  trackingNumber  String           @unique

  status         ShippingStatus @default(PENDING)
  shippingMethod String?
  shippingCost   Float          @default(0)

  fromAddress String
  fromPhone   String
  fromName    String
  toAddress   String
  toPhone     String
  toName      String
  toCity      String?
  toDistrict  String?
  toWard      String?

  providerData String?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  pickedUpAt  DateTime?
  deliveredAt DateTime?

  @@index([orderId])
  @@index([storeId])
  @@index([status])
  @@index([provider])
}

// ─── 10. BLOG ─────────────────────────────────────────────────
model BlogPost {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  storeId       String  @db.ObjectId
  store         Store   @relation(fields: [storeId], references: [id])
  title         String
  slug          String  @unique
  content       String
  excerpt       String?
  featuredImage String?

  metaTitle       String?
  metaDescription String?
  tags            String[]

  categoryId String?   @db.ObjectId
  category   Category? @relation(fields: [categoryId], references: [id])

  blogCategories BlogPostCategory[]

  isPublished Boolean   @default(false)
  publishedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([isPublished])
  @@index([categoryId])
}

model BlogCategory {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  storeId     String  @db.ObjectId
  store       Store   @relation(fields: [storeId], references: [id])
  name        String
  slug        String
  description String?

  blogPosts BlogPostCategory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([storeId, slug])
  @@index([storeId])
}

model BlogPostCategory {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  blogPostId     String       @db.ObjectId
  blogPost       BlogPost     @relation(fields: [blogPostId], references: [id], onDelete: Cascade)
  blogCategoryId String       @db.ObjectId
  blogCategory   BlogCategory @relation(fields: [blogCategoryId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([blogPostId, blogCategoryId])
  @@index([blogPostId])
  @@index([blogCategoryId])
}

// ─── 11. NOTIFICATIONS ────────────────────────────────────────
model Notification {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String    @db.ObjectId
  orderId   String    @db.ObjectId
  message   String
  type      String
  isRead    Boolean   @default(false)
  createdAt DateTime  @default(now())
  readAt    DateTime?
  user      User?     @relation(fields: [userId], references: [id])
  order     Order     @relation(fields: [orderId], references: [id])

  @@index([userId, createdAt])
  @@index([orderId])
  @@index([isRead])
}
