generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ─── 1. USER & AUTH ───────────────────────────────────────────
model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  clerkId  String  @unique
  email    String  @unique
  name     String?
  imageUrl String?
  role     Role    @default(CUSTOMER)
  isVIP    Boolean @default(false)
  isBanned Boolean @default(false)
  phone    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stores    Store[]
  orders    Order[]
  reviews   Review[]
  addresses Address[]
  wishlist  Wishlist[]
  returns   Return[]
}

// ─── 2. STORE MANAGEMENT ──────────────────────────────────────
model Store {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  userId         String
  address        String? // Địa chỉ cửa hàng
  phone          String? // Số điện thoại hotline
  email          String? // Email hỗ trợ
  categories     Category[]
  products       Product[]
  orders         Order[]
  sizes          Size[]
  colors         Color[]
  materials      Material[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  user           User           @relation(fields: [userId], references: [id])
  billboards     Billboard[]
  coupons        Coupon[]
  shippings      Shipping[]
  flashSales     FlashSale[]
  blogPosts      BlogPost[]
  blogCategories BlogCategory[]
}

// ─── 3. CATALOG & ATTRIBUTES ──────────────────────────────────
model Billboard {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  storeId    String     @db.ObjectId
  store      Store      @relation(fields: [storeId], references: [id])
  label      String
  imageUrl   String
  categories Category[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([storeId])
}

model Category {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  storeId     String     @db.ObjectId
  store       Store      @relation(fields: [storeId], references: [id])
  name        String
  slug        String
  products    Product[]
  blogPosts   BlogPost[] // Blog posts sử dụng category này
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  billboard   Billboard? @relation(fields: [billboardId], references: [id])
  billboardId String?    @db.ObjectId

  // Category hierarchy (parent-child relationship)
  parentId String?    @db.ObjectId
  parent   Category?  @relation("CategoryParent", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children Category[] @relation("CategoryParent")

  @@unique([storeId, slug])
  @@index([storeId])
  @@index([parentId])
}

model Size {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  storeId         String           @db.ObjectId
  store           Store            @relation(fields: [storeId], references: [id])
  name            String
  value           String
  productVariants ProductVariant[] // Quan hệ tới biến thể
  cartItems       CartItem[] // Quan hệ tới giỏ hàng
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([storeId])
}

model Color {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  storeId         String           @db.ObjectId
  store           Store            @relation(fields: [storeId], references: [id])
  name            String
  value           String
  productVariants ProductVariant[] // Quan hệ tới biến thể
  cartItems       CartItem[] // Quan hệ tới giỏ hàng
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([storeId])
}

model Material {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  storeId         String           @db.ObjectId
  store           Store            @relation(fields: [storeId], references: [id])
  name            String
  value           String
  products        Product[] // Quan hệ trực tiếp (nếu 1 sp chỉ có 1 chất liệu)
  productVariants ProductVariant[] // Quan hệ với variants
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  cartItems       CartItem[]

  @@index([storeId])
}

enum Role {
  ADMIN
  VENDOR
  CUSTOMER
}

// ─── 4. PRODUCT & VARIANTS ────────────────────────────────────
model Product {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  storeId    String   @db.ObjectId
  store      Store    @relation(fields: [storeId], references: [id])
  categoryId String   @db.ObjectId
  category   Category @relation(fields: [categoryId], references: [id])

  name        String
  slug        String
  description String?

  // Giá và giá khuyến mãi
  price          Int // Giá hiển thị
  compareAtPrice Int? // Giá gốc (để hiển thị giảm giá)

  // Trạng thái
  isFeatured  Boolean @default(false)
  isArchived  Boolean @default(false)
  isPublished Boolean @default(true) // Hiển thị trên storefront

  // Quan hệ biến thể (Size + Color + Material)
  variants ProductVariant[]

  // Thông tin chung (fallback nếu variant không có material)
  materialId String?   @db.ObjectId
  material   Material? @relation(fields: [materialId], references: [id])
  gender     String?   @default("UNISEX")

  // SEO fields
  metaTitle       String?
  metaDescription String?
  tags            String[] // Tags để tìm kiếm và filter

  // Quản lý kho tổng
  trackQuantity  Boolean @default(true) // Có theo dõi số lượng không
  allowBackorder Boolean @default(false) // Cho phép đặt hàng khi hết hàng

  images     Image[]
  orderItems OrderItem[]
  cartItems  CartItem[] // Link tới sản phẩm gốc

  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  publishedAt       DateTime? // Ngày publish
  reviews           Review[]
  wishlists         Wishlist[]
  flashSaleProducts FlashSaleProduct[]

  @@unique([storeId, slug])
  @@index([storeId])
  @@index([categoryId])
  @@index([isPublished])
}

// [NEW MODEL] Quản lý biến thể (Size + Color + Material + Kho)
// Bảng trung gian lưu biến thể (Size + Color + Material + Kho)
model ProductVariant {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  sizeId String @db.ObjectId
  size   Size   @relation(fields: [sizeId], references: [id])

  colorId String @db.ObjectId
  color   Color  @relation(fields: [colorId], references: [id])

  materialId String?   @db.ObjectId
  material   Material? @relation(fields: [materialId], references: [id])

  // SKU cho variant (mã sản phẩm duy nhất)
  sku String?

  // Quản lý kho
  inventory         Int @default(0)
  lowStockThreshold Int @default(10) // Cảnh báo khi tồn kho thấp

  // Giá variant (nếu khác giá product chính)
  price Int? // Giá riêng cho variant này (optional)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId, sizeId, colorId, materialId])
  @@index([productId])
  @@index([sizeId])
  @@index([colorId])
  @@index([materialId])
}

model Image {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

// ─── 5. ORDER & CHECKOUT ──────────────────────────────────────
model Order {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  storeId    String      @db.ObjectId
  store      Store       @relation(fields: [storeId], references: [id])
  orderItems OrderItem[]
  isPaid     Boolean     @default(false)
  status     OrderStatus @default(PENDING)

  // Thông tin khách hàng
  phone      String  @default("")
  email      String? // Email khách hàng
  address    String  @default("")
  city       String? // Thành phố
  postalCode String? // Mã bưu điện
  country    String? // Quốc gia

  // Thông tin giao hàng
  shippingMethod String? // Phương thức giao hàng
  shippingCost   Float?  @default(0) // Phí vận chuyển
  trackingNumber String? // Mã vận đơn

  // Thanh toán
  paymentMethod String? // Phương thức thanh toán
  transactionId String? // ID giao dịch từ payment gateway

  // Giá trị đơn hàng
  subtotal Float @default(0) // Tổng tiền sản phẩm
  tax      Float @default(0) // Thuế
  discount Float @default(0) // Giảm giá
  total    Float @default(0) // Tổng cộng

  // Ghi chú
  customerNote String? // Ghi chú từ khách hàng
  adminNote    String? // Ghi chú nội bộ

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?  @db.ObjectId

  returns   Return[]
  shippings Shipping[]

  @@index([storeId])
  @@index([status])
  @@index([userId])
  @@index([createdAt])
}

model OrderItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String  @db.ObjectId
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])

  quantity Int    @default(1)
  price    Float? // Giá tại thời điểm đặt hàng (nullable để tương thích với dữ liệu cũ)

  // Snapshot thông tin lúc đặt hàng (để hiển thị khi sản phẩm bị xóa/thay đổi)
  sizeId       String? @db.ObjectId
  colorId      String? @db.ObjectId
  materialId   String? @db.ObjectId
  productName  String?
  productPrice Float?
  sizeName     String?
  colorName    String?
  materialName String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([productId])
}

// ─── 6. MARKETING ─────────────────────────────────────────────
model Coupon {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  storeId   String    @db.ObjectId
  store     Store     @relation(fields: [storeId], references: [id])
  code      String
  value     Float
  type      String // "PERCENT" | "FIXED"
  createdAt DateTime  @default(now())
  expiresAt DateTime?

  @@unique([storeId, code])
  @@index([storeId])
}

// ─── 10. FLASH SALE ──────────────────────────────────────────────
model FlashSale {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  storeId     String  @db.ObjectId
  store       Store   @relation(fields: [storeId], references: [id])
  name        String
  description String?

  // Sale timing
  startDate DateTime
  endDate   DateTime

  // Discount
  discountType  String // "PERCENT" | "FIXED"
  discountValue Float

  // Products (many-to-many via FlashSaleProduct)
  flashSaleProducts FlashSaleProduct[]

  // Status
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([startDate])
  @@index([endDate])
  @@index([isActive])
}

model FlashSaleProduct {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  flashSaleId String    @db.ObjectId
  flashSale   FlashSale @relation(fields: [flashSaleId], references: [id], onDelete: Cascade)
  productId   String    @db.ObjectId
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([flashSaleId, productId])
  @@index([flashSaleId])
  @@index([productId])
}

model Review {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId    String  @db.ObjectId
  user      User    @relation(fields: [userId], references: [id])

  rating        Int
  content       String?
  imageUrls     String[]
  isArchived    Boolean  @default(false)
  adminResponse String?
  createdAt     DateTime @default(now())

  @@index([productId])
  @@index([userId])
}

model Wishlist {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

model Address {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  label     String
  phone     String
  address   String
  city      String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// ─── 7. CART ──────────────────────────────────────────────────
model Cart {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  userId    String?    @unique
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // Coupon áp dụng cho cart
  couponCode String?
}

model CartItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  cartId    String  @db.ObjectId
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Lưu lựa chọn của khách (variant)
  sizeId     String?   @db.ObjectId
  size       Size?     @relation(fields: [sizeId], references: [id])
  colorId    String?   @db.ObjectId
  color      Color?    @relation(fields: [colorId], references: [id])
  materialId String?   @db.ObjectId
  material   Material? @relation(fields: [materialId], references: [id])

  quantity Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([cartId])
  @@index([productId])
}

// ─── 8. RETURNS & REFUNDS ──────────────────────────────────────
enum ReturnStatus {
  PENDING
  APPROVED
  REJECTED
  PROCESSING
  COMPLETED
  CANCELLED
}

model Return {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  orderId String @db.ObjectId
  order   Order  @relation(fields: [orderId], references: [id])
  userId  String @db.ObjectId
  user    User   @relation(fields: [userId], references: [id])

  status      ReturnStatus @default(PENDING)
  reason      String // Lý do trả hàng
  description String? // Mô tả chi tiết

  // Sản phẩm trả lại
  returnItems ReturnItem[]

  // Hoàn tiền
  refundAmount Float   @default(0)
  refundMethod String? // "ORIGINAL", "STORE_CREDIT", etc.

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([userId])
  @@index([status])
}

model ReturnItem {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  returnId    String @db.ObjectId
  return      Return @relation(fields: [returnId], references: [id], onDelete: Cascade)
  orderItemId String @db.ObjectId

  quantity Int
  reason   String

  createdAt DateTime @default(now())

  @@index([returnId])
}

// ─── 9. SHIPPING ──────────────────────────────────────────────────
enum ShippingProvider {
  GHN
  VIETTELPOST
  GHTK
  CUSTOM
}

enum ShippingStatus {
  PENDING
  CREATED
  PICKED_UP
  IN_TRANSIT
  DELIVERED
  RETURNED
  CANCELLED
}

model Shipping {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  orderId String @db.ObjectId
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  storeId String @db.ObjectId
  store   Store  @relation(fields: [storeId], references: [id])

  // Provider info
  provider        ShippingProvider @default(CUSTOM)
  providerOrderId String? // ID từ shipping provider
  trackingNumber  String           @unique // Mã vận đơn

  // Shipping details
  status         ShippingStatus @default(PENDING)
  shippingMethod String? // Phương thức giao hàng
  shippingCost   Float          @default(0)

  // Address info
  fromAddress String // Địa chỉ người gửi
  fromPhone   String
  fromName    String
  toAddress   String // Địa chỉ người nhận
  toPhone     String
  toName      String
  toCity      String?
  toDistrict  String?
  toWard      String?

  // Provider response data (JSON)
  providerData String? // Lưu response từ provider API

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  pickedUpAt  DateTime?
  deliveredAt DateTime?

  @@index([orderId])
  @@index([storeId])
  @@index([status])
  @@index([provider])
}

// ─── 11. BLOG ─────────────────────────────────────────────────────
model BlogPost {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  storeId       String  @db.ObjectId
  store         Store   @relation(fields: [storeId], references: [id])
  title         String
  slug          String  @unique
  content       String // HTML content
  excerpt       String? // Short description
  featuredImage String?

  // SEO
  metaTitle       String?
  metaDescription String?
  tags            String[]

  // Category (sử dụng Category thông thường thay vì BlogCategory)
  categoryId String?   @db.ObjectId
  category   Category? @relation(fields: [categoryId], references: [id])

  // Categories (deprecated - sẽ xóa sau)
  blogCategories BlogPostCategory[]

  // Status
  isPublished Boolean   @default(false)
  publishedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([isPublished])
  @@index([categoryId])
}

model BlogCategory {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  storeId     String  @db.ObjectId
  store       Store   @relation(fields: [storeId], references: [id])
  name        String
  slug        String
  description String?

  blogPosts BlogPostCategory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([storeId, slug])
  @@index([storeId])
}

model BlogPostCategory {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  blogPostId     String       @db.ObjectId
  blogPost       BlogPost     @relation(fields: [blogPostId], references: [id], onDelete: Cascade)
  blogCategoryId String       @db.ObjectId
  blogCategory   BlogCategory @relation(fields: [blogCategoryId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([blogPostId, blogCategoryId])
  @@index([blogPostId])
  @@index([blogCategoryId])
}
